<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tim.projet_er3_30">

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>

    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat" >

        <activity
            android:name=".Settings"
            android:label="Settings"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".Classic_Controler"
            android:label="Classic Controler"
            android:screenOrientation="landscape">
        </activity>


        <activity
            android:name=".Bluetooth"
            android:label="Bluetooth"
            android:screenOrientation="landscape">
        </activity>


        <activity
            android:name=".Double_Slider"
            android:label="Double Slider"
            android:screenOrientation="landscape">
        </activity>


        <activity
            android:name=".Joystick_Controler"
            android:label="Joystick"
            android:screenOrientation="landscape">
        </activity>


        <activity
            android:name=".Pad"
            android:label="Pad"
            android:screenOrientation="landscape">
        </activity>


        <activity
            android:name=".Gyroscope"
            android:label="Gyroscope"
            android:screenOrientation="landscape">
        </activity>

    </application>

</manifest>